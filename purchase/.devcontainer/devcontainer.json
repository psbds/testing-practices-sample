// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Psbds stock Services",
	"dockerComposeFile": "./docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	// Mount target folder and Maven cache as separate volumes for better performance
	"mounts": [
		"source=${localWorkspaceFolderBasename}-target,target=${containerWorkspaceFolder}/target,type=volume",
		"source=${localWorkspaceFolderBasename}-m2,target=/home/vscode/.m2,type=volume"
	],

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "21",
			"installMaven": "true",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers/features/azure-cli:1": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8080
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"alexkrechik.cucumberautocomplete",
				"humao.rest-client",
				"ms-mssql.mssql",
				"GitHub.copilot-chat",
				"redhat.vscode-xml"
			],
			"settings": {
				"java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms1G",
				"java.configuration.runtimes": [],
				"java.import.gradle.enabled": false,
				"java.compile.nullAnalysis.mode": "disabled",
				"files.watcherExclude": {
					"**/target/**": true,
					"**/.git/**": true,
					"**/node_modules/**": true
				},
				"files.exclude": {
					"**/target/classes/**": true,
					"**/target/generated-sources/**": true,
					"**/target/generated-test-sources/**": true
				}
			}
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": ".devcontainer/scripts/setup-maven-daemon.sh"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
